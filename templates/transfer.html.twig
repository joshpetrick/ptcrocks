{% extends "layout.html.twig" %}

{% block title %}Transfer Coins{% endblock %}

{% block jumbotron %}
    Jumbotron
{% endblock %}


{% block content %}

    <div class="row">
        <div class="col-md-12" style="text-align: center; margin-bottom: 50px;">
            <h1>{{ balance }} CHC</h1>
        </div>
    </div>

    {% if errorMsg is not null %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger" role="alert">
                    {{ errorMsg }}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal" action="/transfer" method="POST">
                <fieldset>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="amount">Amount</label>
                        <div class="col-md-5">
                            <input id="amount" name="amount" type="text" placeholder="{{ balance - 1000 }}" class="form-control input-md">

                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="address">Address</label>
                        <div class="col-md-5">
                            <input id="address" name="address" type="text" placeholder="address" class="form-control input-md">

                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="submit"></label>
                        <div class="col-md-5">
                            <button id="submit" name="submit" class="btn btn-block btn-primary">Transfer</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>

    <hr>
{% endblock %}


{% block footer %}This Is A Footer{% endblock %}

